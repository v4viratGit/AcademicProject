<!--HEADER-->
<%- include("partials/header.ejs") %>

<!--CONTENT-->
<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 d-none d-lg-block">
        <img class="img-fluid" src="/images/Login page img.jpg" alt="Login page img">
      </div>
      <div class="col-md-6 border border-warning">
        <form action="/admin/service/<%=foundService._id%>?_method=PUT" method="POST" class="text-center">
            <h1>Update Charges</h1>
             <div class="mb-3">
                <input type="text" name="serviceType" class="form-control border border-warning" placeholder="<%= foundService.serviceType %> %> " value="<%= foundService.serviceType %> ">
            </div>
            <div class="mb-3">
                <input type="text" name="serviceCharge" class="form-control border border-warning" placeholder="<%= foundService.serviceCharge %> " required>
            </div> 
            <div class="mb-3">
                <input type="text" name="partTimeCharge" class="form-control border border-warning" placeholder="<%= foundService.partTimeCharge %> " required>
            </div> 
            <div class="mb-3">
                <input type="text" name="materialCharg" class="form-control border border-warning" placeholder="<%= foundService.materialCharge %> " required>
            </div> 
            <div class="d-grid gap-2 col-6 mx-auto my-3">
                <button type="submit" class="btn btn-block btn-warning">Update</button>
            </div> 
        </form>
      </div>
    </div>
  </div>


<!--FOOTER-->
<%- include("partials/footer.ejs") %>