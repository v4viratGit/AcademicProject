<!--HEADER-->
<%- include("partials/header.ejs") %>

<!--CONTENT-->
<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 d-none d-lg-block">
        <img class="img-fluid" src="/images/Login page img.jpg" alt="Login page img">
      </div>
      <div class="col-md-6 border border-warning">
        <form action="/user/login" method="POST" class="text-center p-3 needs-validation" novalidate>
            <h1 class="my-4">Login to RPServices</h1>
            <div>
              <input class="form-control my-4" type="text" name="username" placeholder="Username" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter username!
              </div>
            </div>

            <div>
              <input class="form-control my-4" type="password" name="password" placeholder="Password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter password!
              </div>
            </div>
            
            <div class="d-grid gap-2 col-6 mx-auto my-4">
                <button type="submit" class="btn btn-block btn-warning">Login</button>
            </div> 
        </form>
      </div>
    </div>
  </div>

<!--FOOTER-->
<%- include("partials/footer.ejs") %>
