<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 d-none d-lg-block">
        <img class="img-fluid" src="/images/Login page img.jpg" alt="Login page img">
      </div>
      <div class="col-md-6 border border-warning">
        <form action="/admin/login" method="POST" class="text-center p-3">
            <h1 class="my-4">Login to Admin Section</h1>
            <input class="form-control my-4" type="text" name="username" placeholder="Admin Username">
            <input class="form-control my-4" type="password" name="password" placeholder="Admin Password">
            <div class="d-grid gap-2 col-6 mx-auto my-4">
                <button type="submit" class="btn btn-block btn-warning">Login</button>
            </div> 
        </form>
      </div>
    </div>
