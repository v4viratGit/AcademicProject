<!--HEADER-->
<%- include("partials/header.ejs") %>

<!--CONTENT-->
<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 d-none d-lg-block">
        <img class="img-fluid" src="/images/Login page img.jpg" alt="Login page img">
      </div>
      <div class="col-md-6 border border-warning">
        <form action="/user" method="POST" class="text-center needs-validation" novalidate>
            <h1>RPServices</h1>
            <div>
              <input class="form-control my-3" type="text" name="name" placeholder="Name" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter name!
              </div>
            </div>
          
            <div>
              <input class="form-control my-3" type="text" name="username" placeholder="Username ex: abc@rpservices.com" required>
              <div class="valid-feedback">
                A good username has @ in it!
              </div>
              <div class="invalid-feedback">
                  Please enter Username!
              </div>
            </div>
            
            <div>
              <input class="form-control my-3" type="password" name="password" placeholder="Password" required>
              <div class="valid-feedback">
                A strong password has letters, numbers, and special symbols in it!
              </div>
              <div class="invalid-feedback">
                  Please enter password!
              </div>
            </div>

            <div>
              <input class="form-control my-3" type="email" name="email" placeholder="Email" required>
              <div class="valid-feedback">
                Look good!
              </div>
              <div class="invalid-feedback">
                Please enter email!
              </div>
            </div>
            
            <div>
              <input class="form-control my-3" type="number" name="phone" placeholder="Phone" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter phone
              </div>
            </div>

            <div>
              <input class="form-control my-3" type="text" name="address" placeholder="Address" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter address!
              </div>
            </div>
            
            
            <div class="d-grid gap-2 col-6 mx-auto my-3">
                <button type="submit" class="btn btn-block btn-warning">Sign Up</button>
            </div> 
        </form>
      </div>
    </div>
  </div>


<!--FOOTER-->
<%- include("partials/footer.ejs") %>