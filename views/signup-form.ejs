<!--HEADER-->
<%- include("partials/header.ejs") %>

<!--CONTENT-->
<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 d-none d-lg-block">
        <img class="img-fluid" src="/images/Login page img.jpg" alt="Login page img">
      </div>
      <div class="col-md-6 border border-warning">
        <form action="/user" method="POST" class="text-center">
            <h1>RPServices</h1>
            <input class="form-control my-3" type="text" name="name" placeholder="Name">
            <input class="form-control my-3" type="text" name="username" placeholder="Username ex: abc@rpservices.com">
            <input class="form-control my-3" type="password" name="password" placeholder="Password">
            <input class="form-control my-3" type="email" name="email" placeholder="Email">
            <input class="form-control my-3" type="number" name="phone" placeholder="Phone">
            <input class="form-control my-3" type="text" name="address" placeholder="Address">
            <div class="d-grid gap-2 col-6 mx-auto my-3">
                <button type="submit" class="btn btn-block btn-warning">Sign Up</button>
            </div> 
        </form>
      </div>
    </div>
  </div>


<!--FOOTER-->
<%- include("partials/footer.ejs") %>