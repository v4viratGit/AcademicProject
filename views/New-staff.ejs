<!--HEADER-->
<%- include("partials/header.ejs") %>

    <!-- FORM TO ORDER PROFESSIONALS -->
    <div class="container">
        <div class="card border border-warning my-4 cardcss">
            <div class="card-header text-dark bg-warning">
            <h5>New Staff</h5>    
            </div>
            <div class="card-body">
                <form action="/admin/staff" method="POST" class="needs-validation" novalidate>
                    <!-- TO ACCEPT NAME -->
                    <div class="mb-3">
                        <input type="text" name="name" class="form-control border border-warning" placeholder="Enter Full Name" required>
                        <div class="valid-feedback">
                              Looks good!
                        </div>
                        <div class="invalid-feedback">
                              Please enter name!
                        </div>
                    </div>
                    <!-- SELECT GENDER -->
                    <div class="mb-3">
                        <select name="gender" class="form-select border border-warning" aria-label="Select Gender" required>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                              Please select gender!
                        </div>
                    </div>
                    <!-- TO ACCEPT ADDRESS -->
                    <div class="mb-3">
                        <input type="text" name="address" class="form-control border border-warning" placeholder="Enter Address" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                              Please enter address!
                        </div>
                    </div> 
                    <!-- TO ACCEPT MOBILE NUMBER -->
                    <div class="mb-3">
                        <input type="tel" name="phone" class="form-control border border-warning" placeholder="Enter Mobile Number" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                              Please enter phone!
                        </div>
                    </div>     
                    <!-- TO ACCEPT SKILLS -->
                    <div class="mb-3">
                        <input type="text" name="skills" class="form-control border border-warning" placeholder="Enter Skills" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                              Please enter skills!
                        </div>
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto my-3">
                        <button type="submit" class="btn btn-block btn-warning">Submit</button>
                    </div>
                </form>
            </div>
          </div>
    </div>

<!--FOOTER-->
<%- include("partials/footer.ejs") %>