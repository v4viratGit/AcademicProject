<!--HEADER-->
<%- include("partials/header.ejs") %>

<!--CONTENT-->
<div class="container mt-5 border border-warning">
    <div class="p-4">
        <!--USER PROFILE PICTURE AND NAME-->
        <div class="d-flex justify-content-center">
            <div class="text-center card" style="width: 18rem;">
                <img src="/images/user profile picture.jpg" class="card-img-top" alt="user profile picture">
                <div class="card-body">
                    <p class="card-text"><%= foundUser.name %> </p>
                </div>
            </div>
        </div>
        
        <!--USER INFORMATION-->
        <div class="border border-warning my-3 text-center">
            <h5>Username</h5>
            <p><%= foundUser.username %></p>
            <h5>Email</h5>
            <p><%= foundUser.email %></p>
            <h5>Phone</h5>
            <p><%= foundUser.phone %></p>
            <h5>Address</h5>
            <p><%= foundUser.address %></p>
            <a href="/user/<%= foundUser._id%>/edit" class="my-2 btn btn-block btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
                Edit Profile
            </a>
            <form action="/user/<%= foundUser._id%>?_method=DELETE" method="POST">
                <button class="my-2 btn btn-block btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>


<!--FOOTER-->
<%- include("partials/footer.ejs") %>